<!doctype html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, height=device-height, user-scalable=no, initial-scale=1.0"/>
    </head>
    <body>
        <p>{{this.0.short_name}}</p>
        <p>{{this.0.long_name}}</p>
        <p>{{this.0.description}}</p>
        <form method="POST" action="">
            <label for="content">Content</label><br>
            <textarea name="content" rows="10" type="text"></textarea><br>
            <button>New Post</button>
        </form>
        <br><br>

        {{#each this.1}}
            <details open="" id="{{this.post_number}}">
                <summary>Anonymous {{this.last_modified}} <a href="#{{this.post_number}}">No. {{this.post_number}}</a></summary>
                <p>{{this.content}}</p>
            </details>
        {{/each}}
    </body>
</html>
